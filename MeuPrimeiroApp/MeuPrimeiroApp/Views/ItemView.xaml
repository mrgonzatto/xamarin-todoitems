<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeuPrimeiroApp.Views.ItemView" 
             Title="Novo Item a Fazer">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Command="{Binding Save}" />
    </ContentPage.ToolbarItems>

    <StackLayout Padding="14">
        <Label Text="Título" />
        <Entry Text="{Binding Item.Title}"/>

        <Label Text="Data" />
        <DatePicker Date="{Binding Item.Due}" />

        <StackLayout Orientation="Horizontal">
            <Switch IsToggled="{Binding Item.Completed}" />
            <Label Text="Finalizado" />
        </StackLayout>
    </StackLayout>
    
</ContentPage>